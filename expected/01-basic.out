PREPARE prep_insert AS INSERT INTO t1 VALUES ($1);
-- Insert successful
SAVEPOINT aze;
EXECUTE prep_insert(2);
ROLLBACK TO aze;
-- Insert will fail
SAVEPOINT aze;
EXECUTE prep_insert('10.5');
ROLLBACK TO aze;
DEALLOCATE prep_insert;
