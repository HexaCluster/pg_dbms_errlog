TRUNCATE "ERR$_t1";
-- test queue discard on rollback
SET pg_dbms_errlog.synchronous = off;
BEGIN;
SAVEPOINT aze;
INSERT INTO t1 VALUES ('queue 1');
ROLLBACK TO aze;
-- commit should discard the queue
ROLLBACK;
SELECT dbms_errlog.publish_queue(true);
 publish_queue 
