LOAD 'pg_dbms_errlog';
SET pg_dbms_errlog.synchronous = query;
-- Create the error log table for relation t1
CALL dbms_errlog.create_error_log('t1');
SELECT count(*) FROM dbms_errlog.register_errlog_tables ;
 count 
